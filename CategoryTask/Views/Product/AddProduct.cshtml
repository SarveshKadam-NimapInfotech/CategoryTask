@model CategoryTask.Models.ViewModel.AddProductRequest

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            background-image: url('https://www.shutterstock.com/shutterstock/photos/2431469203/display_1500/stock-photo-businessman-or-customer-add-products-to-card-while-online-shopping-at-store-e-commerce-marketing-2431469203.jpg'); /* Replace with your image URL */
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .form-label {
            font-weight: bold;
        }

        .btn-save {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-save:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Add Product</h3>
                        <form method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Product Name</label>
                                <input type="text" class="form-control rounded-pill" id="name" asp-for="Name" placeholder="Enter product name" />
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="isActive" asp-for="IsActive" />
                                <label class="form-check-label" for="isActive">Is Active</label>
                            </div>
                            <div class="mb-3">
                                <label for="categoryId" class="form-label">Category Id</label>
                                <input type="text" class="form-control rounded-pill" id="categoryId" asp-for="CategoryId" placeholder="Enter category id" />
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-save btn-lg">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

